---
import Layout from '../layouts/Layout.astro'

interface Props {
	title: string
}

const { title } = Astro.props
---

<Layout title='Auxiliar Manipuladora del CartÃ³n'>
	<main>
		<aside>as</aside>
		<article><slot name='article' /></article>
		<footer>foo</footer>
		<section>sec</section>
	</main>
</Layout>
<style>
	main {
		min-height: 100vh;
		display: grid;
		grid-template-areas:
			'aside article'
			'footer footer'
			'section section';
		grid-template-columns: 250px 1fr;
		grid-template-rows: 1fr auto;
		box-sizing: border-box;
		/* border: blue 2px solid; */
	}
	main > * {
		box-sizing: border-box;
		/* border: black 1px solid; */
	}
	aside {
		grid-area: aside;
		overflow-y: hidden;
		background-color: light-dark(var(--color-background-l), black);
	}
	article {
		grid-area: article;
		overflow-y: hidden;
		background-color: color-mix(in srgb, var(--color-background-l), black 3%);
	}
	footer {
		grid-area: footer;
	}
	section {
		grid-area: section;
	}
</style>
