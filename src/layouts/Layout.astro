---
interface Props {
	title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang='es'>
	<head>
		<meta charset='UTF-8' />
		<meta
			name='description'
			content='Astro description'
		/>
		<meta
			name='viewport'
			content='width=device-width'
		/>
		<link
			rel='icon'
			type='image/svg+xml'
			href='/favicon.svg'
		/>
		<meta
			name='generator'
			content={Astro.generator}
		/>
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--color-background-l: #d8d8d8;
		--auxiliar1: rgb(223, 172, 18);
		--auxiliar2: rgb(0, 129, 74);
		--marcado: rgb(rgb(0, 204, 255));
		box-sizing: border-box;
		color-scheme: light dark;
	}
	html {
		font-family: system-ui, sans-serif;
	}
	@font-face {
		font-family: 'DEMI';
		src: url('/fonts/DEMI.woff') format('woff');
	}
	@font-face {
		font-family: 'RELOJ';
		src: url('/fonts/RELOJ.woff') format('woff');
	}
	body {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
		min-height: 100vh;
		/* border: orange solid 3px; */
	}
	h1 {
		padding: 0;
		margin: 0;
	}
</style>
