---
import LogoAuxi from './icons/LogoAuxi.astro'
import BtnMenu from './BtnMenu.astro'
import BtnReact from './botonReact/BtnReact.jsx'
---

<main>
	<div class='logo'>
		<LogoAuxi />
	</div>
	<div>
		<BtnMenu href='/'><p>Inicio</p></BtnMenu>
		<BtnMenu href='/contacto'><p>Contacto</p></BtnMenu>
		<BtnMenu href='/arkanoid'><p>Arkanoid</p></BtnMenu>
		<BtnMenu href='/reloj'><p>Reloj</p></BtnMenu>
		<BtnReact client:load />
	</div>
</main>

<style>
	main {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		padding: 0;
		margin: 0;
	}
	img {
		padding: 1rem;
	}
	.logo {
		margin: 1rem 0;
		width: 80%;
		height: auto;
	}
	div {
		color: white;
		display: flex;
		flex-direction: column;
		gap: 1rem;
		width: 77%;
		justify-content: center;
	}
	p {
		padding: 0 1rem;
	}
</style>
