---
import Layout2 from '../layouts/Layout2.astro'
import BtnTheme from '../components/BtnTheme.astro'
---

<Layout2 title='article'>
	<main slot='article'>
		<header>
			<h1>AUXILIAR MANIPULADORA DEL CARTÃ“N</h1>
			<div class='btn'>
				<BtnTheme />
			</div>
		</header>
		<div class='cuerpo'>hola</div>
	</main>
</Layout2>

<style>
	main {
		height: 100%;
		margin: 0;
		padding: 0;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		background-color: light-dark(
			color-mix(in srgb, var(--color-background-l), black 3%),
			black
		);
		box-sizing: border-box;
	}
	main > * {
		box-sizing: border-box;
	}
	header {
		width: 100%;
		display: flex;
		flex-direction: row;
		justify-content: center;
		align-items: center;
		background-color: light-dark(
			color-mix(in srgb, var(--color-background-l), white 80%),
			color-mix(in srgb, var(--color-background-d), white 9%)
		);
		padding: 0.5rem;
	}
	h1 {
		font-family: 'DEMI', system-ui, sans-serif;
		display: flex;
		flex: 1;
		justify-content: center;
		color: light-dark(var(--auxiliar2), var(--auxiliar1));
	}
	.btn {
		margin: 0 1rem;
		display: flex;
		justify-content: center;
		align-items: center;
	}
	.cuerpo {
		display: flex;
		flex: 1;
		justify-content: center;
	}
</style>

