---
import Layout2 from '../layouts/Layout2.astro'
import Article from '../components/Article.astro'
---

<Layout2 title='article'>
	<main slot='article'>
		<div>
			<Article />
		</div>
	</main>
</Layout2>

<style>
	main {
		height: 100%;
		margin: 0;
		padding: 0;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		box-sizing: border-box;
	}
	main > * {
		box-sizing: border-box;
	}
	div {
		margin: 3rem;
	}
</style>
